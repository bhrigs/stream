{
    "name": "icicleio/stream",
    "description": "Asynchronous streams for Icicle.",
    "keywords": [
        "asynchronous",
        "async",
        "stream"
    ],
    "homepage": "http://icicle.io",
    "license": "MIT",
    "authors": [
        {
            "name": "Aaron Piotrowski",
            "email": "aaron@icicle.io"
        }
    ],
    "require": {
        "icicleio/icicle": "^0.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.6"
    },
    "suggest": {
        "ext-mbstring": "Enables encoding-aware text stream reading."
    },
    "autoload": {
        "psr-4": {
            "Icicle\\Stream\\": "src"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Icicle\\Tests\\Stream\\": "tests"
        }
    }
}
